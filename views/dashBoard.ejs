<!DOCTYPE html>
<html lang="en">
    
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Inventory</title>
        <link rel="stylesheet" href="/assets/global-styles.css" type="text/css">
        
    </head>

<body>
    <%- include('navbar', { brands: brands}) %>
        <div class="global-container">
            <h1>Dashboard</h1>
            <div class="stats">
                <p>Stock count: <%= carCount %>
                </p>
                <div class="topBrands">
                    <ol>
                        <% topBrands.map(brand=>{%>
                            <li>
                                <p>
                                    <%= brand.brandname %>
                                </p>
                                <p>Count: <%= brand.total_cars %>
                                </p>
                            </li>
                            <% }) %>
                    </ol>
                </div>
            </div>
            <div class="all_cars">
                <% allCars.map(car=>{%>
                    <h2>
                        <%= car.model %>
                    </h2>
                    <p>
                        <%= car.brand %>
                    </p>
                    <p>Ammount in Stock: <%= car.count %>
                    </p>
                    <img src="<%= car.logo %>" alt="Logo">
                    <br>
                    <a href="/car_view/<%= car.id %>">See more</a>
                    <% }) %>
            </div>
        </div>

</body>

</html>