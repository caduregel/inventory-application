<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/assets/global-styles.css" type="text/css">
    <link rel="stylesheet" href="/assets/dashBoard.css" type="text/css">

</head>

<body>
    <%- include('navbar', { brands: brands }) %>
    <div class="global-container dashboard-container">
        <h1>Dashboard</h1>
        <div class="stats">
            <p>Stock count: <%= carCount %></p>
            <p>Top brands:</p>
            <div class="topBrands">
                <ol>
                    <% topBrands.map(brand => { %>
                        <li>
                            <p><%= brand.brandname %></p>
                            <p>Count: <%= brand.total_cars %></p>
                        </li>
                    <% }) %>
                </ol>
            </div>
        </div>
        <div class="all_cars">
            <% allCars.map(car => { %>
                <div class="car-item">
                    <h2><%= car.model %></h2>
                    <p>Brand: <%= car.brandname %></p>
                    <p>Amount in Stock: <%= car.count %></p>
                    <img src="<%= car.logo %>" alt="<%= car.brand %> Logo">
                    <br>
                    <a href="/car_view/<%= car.id %>">See more</a>
                </div>
            <% }) %>
        </div>
    </div>
</body>

</html>